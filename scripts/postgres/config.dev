#!/bin/bash
#-*- mode: sh -*-

echo ${PG_SRC_ROOT:=$HOME/work/db/postgres} &>/dev/null
echo ${PG_DEST_DIR:=$HOME/work/db/pgdev} &>/dev/null


cd $PG_SRC_ROOT
$PG_SRC_ROOT/configure --prefix=$PG_DEST_DIR \
                       --enable-debug --enable-profiling \
                       --with-perl \
                       --with-llvm
