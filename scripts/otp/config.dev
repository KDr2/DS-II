#!/bin/bash
#-*- sh -*-

cd $HOME/Work/opensrc/otp

if [[ $1 == "autoconf" ]]; then
    ./otp_build autoconf
fi

./configure --enable-threads --enable-smp-support \
            --enable-kernel-poll \
            --enable-sctp \
            --enable-hipe \
            --with-dynamic-trace=systemtap  --enable-vm-probes \
            --with-ssl --enable-shared-zlib \
            --enable-dirty-schedulers \
            --without-javac \
            --prefix=$HOME/programs/otp/develop


